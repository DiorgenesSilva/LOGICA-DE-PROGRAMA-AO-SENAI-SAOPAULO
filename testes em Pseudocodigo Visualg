  Algoritmo "estutura condicional"

var
  atual: inteiro
  nacimento: inteiro
 idade: inteiro
Inicio
         escreva ( "em que ano estamos" )
         leia ( atual)
         escreva ("Em que eu nasci?\")
         leia( nacimento)
         idade <- (  atual -  nacimento)
         escreval ("Em", atual,"Voce tera",idade,"anos")
         se idade >= 21 entao
         escreva ("E vc ja é maior de idade")
         fimse

Fimalgoritmo

--------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------
Algoritmo "Condiional composta  "                            

var
  atual: inteiro
  nacimento: inteiro
  idade: inteiro
Inicio
         escreva ( "em que ano estamos" )
         leia ( atual)
         escreva ("Em que eu nasci?\")
         leia( nacimento)
         idade <- (  atual -  nacimento)
                   escreval ("Em", atual,"Voce tera",idade,"anos")
                   se idade >= 21 entao
                   escreval ("E vc ja tera atingido a maior idade  idade")

                  senao
                  escreva("Voce ainda é menor de 21 anos")
         fimse
         
         

Fimalgoritmo

